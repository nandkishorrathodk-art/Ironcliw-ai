# ================================================================
# JARVIS Windows Configuration
# ================================================================
# This file contains Windows-specific environment variables for JARVIS
# Copy this to .env to use these settings
#
# Quick Start:
#   1. Copy this file: copy .env.windows .env
#   2. Update any paths or settings specific to your system
#   3. Run: python unified_supervisor.py
# ================================================================

# ----------------------------------------------------------------
# Authentication Bypass Configuration
# ----------------------------------------------------------------
# On Windows, voice biometric authentication is unavailable
# These settings enable authentication bypass for Windows/Linux

# Auto-enable bypass on Windows (recommended)
JARVIS_AUTO_BYPASS_WINDOWS=true

# Or explicitly enable bypass on all platforms
# JARVIS_BYPASS_AUTH=true

# Development mode (bypasses all auth + enables dev features)
# JARVIS_DEV_MODE=true

# Optional: Require password for bypass (adds security layer)
# JARVIS_BYPASS_PASSWORD=your_secure_password_here

# ----------------------------------------------------------------
# Platform Configuration
# ----------------------------------------------------------------
# Force platform detection (usually auto-detected)
# JARVIS_PLATFORM=Windows

# Disable macOS-specific features
JARVIS_DISABLE_SWIFT_EXTENSIONS=true
JARVIS_DISABLE_RUST_EXTENSIONS=true
JARVIS_DISABLE_COREML=true

# ----------------------------------------------------------------
# Backend Configuration
# ----------------------------------------------------------------
# Backend server settings
JARVIS_PORT=8010
JARVIS_HOST=localhost

# Frontend port
FRONTEND_PORT=3000

# ----------------------------------------------------------------
# GCP Configuration (Optional - for cloud features)
# ----------------------------------------------------------------
# GCP settings can be left empty for local-only operation
# GCP_PROJECT_ID=your-gcp-project-id
# GCP_REGION=us-central1
# GCP_ZONE=us-central1-a

# Disable GCP features if not using cloud (faster startup)
JARVIS_SKIP_GCP=true
JARVIS_SKIP_DOCKER=true

# ----------------------------------------------------------------
# ML Model Configuration
# ----------------------------------------------------------------
# Use CPU-only inference on Windows (no Metal/CoreML)
JARVIS_ML_DEVICE=cpu

# Disable model auto-loading (load on demand)
JARVIS_LAZY_LOAD_MODELS=true

# LLM Configuration
# Use cloud API or local models
JARVIS_LLM_PROVIDER=claude  # Options: claude, openai, local

# ----------------------------------------------------------------
# Voice Configuration
# ----------------------------------------------------------------
# Disable voice biometric authentication
JARVIS_VOICE_BIOMETRIC_ENABLED=false

# Use cross-platform TTS (pyttsx3 instead of macOS 'say')
JARVIS_TTS_ENGINE=pyttsx3

# Wake word detection (optional - requires porcupine)
JARVIS_WAKE_WORD_ENABLED=false

# ----------------------------------------------------------------
# Vision Configuration
# ----------------------------------------------------------------
# Screen capture method for Windows
JARVIS_SCREEN_CAPTURE_METHOD=mss  # mss is cross-platform

# Vision processing
JARVIS_VISION_ENABLED=true

# ----------------------------------------------------------------
# Logging Configuration
# ----------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log to file
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/jarvis.log

# ----------------------------------------------------------------
# Performance Configuration
# ----------------------------------------------------------------
# Number of worker threads
JARVIS_WORKERS=4

# Memory limit (MB)
JARVIS_MEMORY_LIMIT=4096

# Enable hot reload for development
JARVIS_DEV_MODE=false
JARVIS_HOT_RELOAD=false

# ----------------------------------------------------------------
# API Keys (Add your keys here)
# ----------------------------------------------------------------
# Anthropic Claude API (recommended)
# ANTHROPIC_API_KEY=your_api_key_here

# OpenAI API (alternative)
# OPENAI_API_KEY=your_api_key_here

# ElevenLabs TTS (optional - for high-quality voice)
# ELEVENLABS_API_KEY=your_api_key_here

# ----------------------------------------------------------------
# Security Configuration
# ----------------------------------------------------------------
# Secret key for session management
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
# SECRET_KEY=your_secret_key_here

# Allowed origins for CORS (for web UI)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8010

# ----------------------------------------------------------------
# Database Configuration (Optional)
# ----------------------------------------------------------------
# SQLite is used by default for Windows
DATABASE_TYPE=sqlite
DATABASE_PATH=./data/jarvis.db

# For Cloud SQL (advanced - requires GCP setup)
# DATABASE_TYPE=postgresql
# CLOUD_SQL_CONNECTION_NAME=project:region:instance
# DB_USER=jarvis
# DB_PASS=your_password
# DB_NAME=jarvis

# ----------------------------------------------------------------
# Feature Flags
# ----------------------------------------------------------------
# Enable/disable specific features

# Trinity Integration (JARVIS-Prime + Reactor-Core)
JARVIS_TRINITY_ENABLED=false  # Set to true if you have other repos

# Neural Mesh (Multi-agent system)
JARVIS_NEURAL_MESH_ENABLED=false

# AGI OS (Autonomous actions)
JARVIS_AGI_OS_ENABLED=false

# Computer Use (UI automation)
JARVIS_COMPUTER_USE_ENABLED=true

# ----------------------------------------------------------------
# Windows-Specific Settings
# ----------------------------------------------------------------
# Use Windows notification system
JARVIS_NOTIFICATIONS_ENABLED=true
JARVIS_NOTIFICATION_PROVIDER=win10toast

# Windows automation backend
JARVIS_AUTOMATION_PROVIDER=pyautogui

# Window management
JARVIS_WINDOW_MANAGER=win32gui

# Audio backend
JARVIS_AUDIO_BACKEND=sounddevice

# ----------------------------------------------------------------
# Paths (Windows)
# ----------------------------------------------------------------
# Data directory
JARVIS_DATA_DIR=./data

# Cache directory
JARVIS_CACHE_DIR=./cache

# Models directory
JARVIS_MODELS_DIR=./models

# Logs directory
JARVIS_LOGS_DIR=./logs

# ================================================================
# END OF CONFIGURATION
# ================================================================
