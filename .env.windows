# JARVIS Windows Environment Configuration
# ═══════════════════════════════════════════════════════════════════════════════
# Copy this file to .env and customize for your Windows setup
# ═══════════════════════════════════════════════════════════════════════════════

# Platform
JARVIS_PLATFORM=windows
JARVIS_WINDOWS_VERSION=11  # 10 or 11

# Authentication (MVP: Bypass mode)
JARVIS_AUTH_MODE=BYPASS  # BYPASS, PASSWORD, WINDOWS_HELLO, HYBRID
JARVIS_SKIP_VOICE_AUTH=true  # Skip voice authentication for MVP
JARVIS_REQUIRE_AUTH_FOR_UNLOCK=false  # No auth required in dev mode

# Paths (Windows-specific - use forward slashes or double backslashes)
JARVIS_HOME=%USERPROFILE%\\.jarvis
JARVIS_CONFIG_DIR=%APPDATA%\\JARVIS
JARVIS_DATA_DIR=%LOCALAPPDATA%\\JARVIS
JARVIS_CACHE_DIR=%TEMP%\\JARVIS
JARVIS_LOG_DIR=%LOCALAPPDATA%\\JARVIS\\logs
JARVIS_MODEL_DIR=%LOCALAPPDATA%\\JARVIS\\models

# Ports (same as macOS for consistency)
JARVIS_BACKEND_PORT=8010
JARVIS_PRIME_PORT=8000
JARVIS_PRIME_WS_PORT=8002
JARVIS_REACTOR_PORT=8090
JARVIS_FRONTEND_PORT=3000
JARVIS_LOADING_SERVER_PORT=8001

# Audio Configuration
JARVIS_AUDIO_BACKEND=wasapi  # wasapi, directsound, mme
JARVIS_SAMPLE_RATE=16000
JARVIS_AUDIO_CHANNELS=1
JARVIS_AUDIO_BUFFER_SIZE=1024

# Voice Configuration
JARVIS_WAKE_WORD=hey jarvis
JARVIS_VOICE_CONFIDENCE_THRESHOLD=0.7
JARVIS_VAD_MODE=3  # Voice Activity Detection (0-3)

# Vision Configuration
JARVIS_VISION_BACKEND=windows_graphics_capture  # Windows.Graphics.Capture API
JARVIS_VISION_FPS=15
JARVIS_VISION_QUALITY=high  # low, medium, high, ultra
JARVIS_VISION_FORMAT=png  # png, jpeg, raw
JARVIS_MULTI_MONITOR_ENABLED=true

# ML/AI Configuration
JARVIS_ML_BACKEND=directml  # directml, onnx_cpu, cloud
JARVIS_DIRECTML_ENABLED=true  # Use DirectML for GPU/NPU acceleration
JARVIS_NPU_ENABLED=true  # Use NPU if available (Intel Core Ultra, AMD Ryzen AI)
JARVIS_CUDA_ENABLED=false  # Set to true if you have NVIDIA GPU

# ONNX Runtime
JARVIS_ONNX_PROVIDERS=DmlExecutionProvider,CPUExecutionProvider
JARVIS_ONNX_INTER_OP_THREADS=4
JARVIS_ONNX_INTRA_OP_THREADS=4

# GCP Configuration (Cloud Inference)
JARVIS_GCP_ENABLED=true
JARVIS_GCP_PROJECT_ID=your-gcp-project-id
JARVIS_GCP_ZONE=us-central1-a
JARVIS_GCP_USE_GOLDEN_IMAGE=true
JARVIS_GCP_FALLBACK_TO_LOCAL=false  # Don't load models locally on 16GB RAM

# GCP VM Configuration
GCP_VM_INSTANCE_NAME=jarvis-prime-node
GCP_VM_STATIC_IP_NAME=jarvis-prime-ip
GCP_VM_MACHINE_TYPE=n1-highmem-4
GCP_VM_STARTUP_TIMEOUT=300

# Claude API (Fallback)
CLAUDE_API_KEY=your-claude-api-key-here
CLAUDE_MODEL=claude-3-5-sonnet-20241022
CLAUDE_FALLBACK_ENABLED=true

# Memory Management
JARVIS_MAX_MEMORY_GB=14  # Max RAM usage before cloud offload
JARVIS_MEMORY_OFFLOAD_THRESHOLD_GB=12
JARVIS_MEMORY_WARNING_THRESHOLD_GB=14
JARVIS_GC_THRESHOLD_GB=12

# CPU Management
JARVIS_MAX_CPU_PERCENT=80
JARVIS_CPU_AFFINITY_MASK=auto

# Development Mode
JARVIS_DEV_MODE=true
JARVIS_HOT_RELOAD_ENABLED=true
JARVIS_VERBOSE_LOGGING=true
JARVIS_DEBUG_MODE=false
JARVIS_VERBOSE_PLATFORM=true  # Show platform detection info

# Logging
JARVIS_LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
JARVIS_LOG_TO_FILE=true
JARVIS_LOG_TO_CONSOLE=true
JARVIS_LOG_ROTATION_ENABLED=true
JARVIS_LOG_MAX_SIZE_MB=100
JARVIS_LOG_BACKUP_COUNT=5

# Performance
JARVIS_PARALLEL_INITIALIZATION=true
JARVIS_LAZY_LOADING=true
JARVIS_SKIP_OPTIONAL_COMPONENTS=false

# Network
JARVIS_CORS_ENABLED=true
JARVIS_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
JARVIS_WEBSOCKET_ENABLED=true
JARVIS_WEBSOCKET_PING_INTERVAL=30
JARVIS_WEBSOCKET_PING_TIMEOUT=10

# Security
JARVIS_ENCRYPTION_AT_REST=true
JARVIS_ENCRYPTION_IN_TRANSIT=true
JARVIS_CREDENTIAL_BACKEND=windows_credential_manager
JARVIS_USE_DPAPI=true  # Windows Data Protection API

# Windows-Specific
JARVIS_POWERSHELL_ENABLED=true
JARVIS_POWERSHELL_EXECUTION_POLICY=RemoteSigned
JARVIS_WINDOWS_HELLO_ENABLED=false  # Phase 3
JARVIS_UAC_ELEVATION_REQUIRED=false
JARVIS_UAC_AUTO_ELEVATE=false

# C# Native Layer
JARVIS_NATIVE_ENABLED=true
JARVIS_NATIVE_DLL_PATH=backend\\windows_native\\bin\\Release

# Feature Flags
JARVIS_VOICE_UNLOCK_ENABLED=false  # Disabled for MVP
JARVIS_VISION_ENABLED=true
JARVIS_GHOST_HANDS_ENABLED=true  # Window automation
JARVIS_NEURAL_MESH_ENABLED=true  # Multi-agent system
JARVIS_AGI_OS_ENABLED=true  # AGI orchestration
JARVIS_ZERO_TOUCH_ENABLED=true  # Auto-updates

# Trinity (JARVIS-Prime + Reactor-Core)
JARVIS_PRIME_ENABLED=true
JARVIS_REACTOR_ENABLED=true
JARVIS_TRINITY_ENABLED=true

# Experimental Features
JARVIS_WSL_INTEGRATION=false  # Windows Subsystem for Linux
JARVIS_WINDOWS_TERMINAL_INTEGRATION=false
JARVIS_EDGE_TTS=false  # Edge TTS for voice synthesis

# Monitoring & Telemetry
JARVIS_TELEMETRY_ENABLED=false
JARVIS_METRICS_ENABLED=true
JARVIS_HEALTH_CHECK_ENABLED=true
JARVIS_HEALTH_CHECK_INTERVAL=30

# Startup Behavior
JARVIS_AUTO_START=false  # Auto-start on Windows boot
JARVIS_RUN_AS_SERVICE=false  # Run as Windows Service
JARVIS_MINIMIZE_TO_TRAY=false  # Minimize to system tray
JARVIS_SHOW_LOADING_PAGE=true

# Frontend
JARVIS_FRONTEND_ENABLED=true
JARVIS_FRONTEND_DEV_SERVER=true  # Use React dev server
JARVIS_FRONTEND_HMR=true  # Hot module reload

# Backend
JARVIS_BACKEND_RELOAD_ON_CHANGE=true
JARVIS_BACKEND_GRACEFUL_SHUTDOWN=true
JARVIS_BACKEND_SHUTDOWN_TIMEOUT=30

# Database (if using Cloud SQL)
JARVIS_USE_CLOUD_SQL=false
JARVIS_CLOUD_SQL_INSTANCE=your-instance-name
JARVIS_CLOUD_SQL_DATABASE=jarvis
JARVIS_CLOUD_SQL_USER=jarvis
JARVIS_CLOUD_SQL_PASSWORD=your-password

# API Keys (add your own)
OPENAI_API_KEY=your-openai-key-here
ANTHROPIC_API_KEY=your-anthropic-key-here
GOOGLE_API_KEY=your-google-key-here

# Python Environment
PYTHONPATH=%CD%
PYTHONUNBUFFERED=1
PYTHONUTF8=1  # Force UTF-8 encoding on Windows

# Node.js (for frontend)
NODE_ENV=development
NODE_OPTIONS=--max-old-space-size=4096

# Rust (for extensions)
RUST_BACKTRACE=1
RUSTFLAGS=-C target-cpu=native

# .NET (for C# native layer)
DOTNET_CLI_TELEMETRY_OPTOUT=1
DOTNET_SKIP_FIRST_TIME_EXPERIENCE=1

# Windows Display Scaling (if issues with high DPI)
JARVIS_WINDOWS_DPI_AWARE=true
JARVIS_WINDOWS_DPI_SCALING=1.0  # 1.0 = 100%, 1.5 = 150%, 2.0 = 200%

# ═══════════════════════════════════════════════════════════════════════════════
# NOTES:
# - Windows paths can use either forward slashes (/) or double backslashes (\\)
# - Environment variables like %USERPROFILE% will be expanded automatically
# - Set JARVIS_DEV_MODE=false for production use
# - Set JARVIS_AUTH_MODE=PASSWORD or WINDOWS_HELLO for production
# - GCP credentials: Use gcloud auth application-default login
# ═══════════════════════════════════════════════════════════════════════════════
