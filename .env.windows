# ================================================================
# Ironcliw Windows Configuration
# ================================================================
# This file contains Windows-specific environment variables for Ironcliw
# Copy this to .env to use these settings
#
# Quick Start:
#   1. Copy this file: copy .env.windows .env
#   2. Update any paths or settings specific to your system
#   3. Run: python unified_supervisor.py
# ================================================================

# ----------------------------------------------------------------
# Authentication Bypass Configuration
# ----------------------------------------------------------------
# On Windows, voice biometric authentication is unavailable
# These settings enable authentication bypass for Windows/Linux

# Auto-enable bypass on Windows (recommended)
Ironcliw_AUTO_BYPASS_WINDOWS=true

# Or explicitly enable bypass on all platforms
# Ironcliw_BYPASS_AUTH=true

# Development mode (bypasses all auth + enables dev features)
# Ironcliw_DEV_MODE=true

# Optional: Require password for bypass (adds security layer)
# Ironcliw_BYPASS_PASSWORD=your_secure_password_here

# ----------------------------------------------------------------
# Platform Configuration
# ----------------------------------------------------------------
# Force platform detection (usually auto-detected)
# Ironcliw_PLATFORM=Windows

# Disable macOS-specific features
Ironcliw_DISABLE_SWIFT_EXTENSIONS=true
Ironcliw_DISABLE_RUST_EXTENSIONS=true
Ironcliw_DISABLE_COREML=true

# ----------------------------------------------------------------
# Backend Configuration
# ----------------------------------------------------------------
# Backend server settings
Ironcliw_PORT=8010
Ironcliw_HOST=localhost

# Frontend port
FRONTEND_PORT=3000

# ----------------------------------------------------------------
# GCP Configuration (Optional - for cloud features)
# ----------------------------------------------------------------
# GCP settings can be left empty for local-only operation
# GCP_PROJECT_ID=your-gcp-project-id
# GCP_REGION=us-central1
# GCP_ZONE=us-central1-a

# Disable GCP features if not using cloud (faster startup)
Ironcliw_SKIP_GCP=true
Ironcliw_SKIP_DOCKER=true

# ----------------------------------------------------------------
# ML Model Configuration
# ----------------------------------------------------------------
# Use CPU-only inference on Windows (no Metal/CoreML)
Ironcliw_ML_DEVICE=cpu

# Disable model auto-loading (load on demand)
Ironcliw_LAZY_LOAD_MODELS=true

# LLM Configuration
# Use cloud API or local models
Ironcliw_LLM_PROVIDER=fireworks  # Options: fireworks, claude, openai, local

# ----------------------------------------------------------------
# Voice Configuration
# ----------------------------------------------------------------
# Disable voice biometric authentication
Ironcliw_VOICE_BIOMETRIC_ENABLED=true

# Use cross-platform TTS (pyttsx3 instead of macOS 'say')
Ironcliw_TTS_ENGINE=pyttsx3

# Wake word detection (optional - requires porcupine)
Ironcliw_WAKE_WORD_ENABLED=false

# ----------------------------------------------------------------
# Vision Configuration
# ----------------------------------------------------------------
# Screen capture method for Windows
Ironcliw_SCREEN_CAPTURE_METHOD=mss  # mss is cross-platform

# Vision processing
Ironcliw_VISION_ENABLED=true

# ----------------------------------------------------------------
# Logging Configuration
# ----------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log to file
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/jarvis.log

# ----------------------------------------------------------------
# Performance Configuration
# ----------------------------------------------------------------
# Number of worker threads
Ironcliw_WORKERS=4

# Memory limit (MB)
Ironcliw_MEMORY_LIMIT=4096

# Enable hot reload for development
Ironcliw_DEV_MODE=false
Ironcliw_HOT_RELOAD=false

# ----------------------------------------------------------------
# API Keys (Add your keys here)
# ----------------------------------------------------------------
# Fireworks AI (primary LLM provider - fast open-source models)
FIREWORKS_API_KEY=fw_EaysPdkvLhCK5KB3WomZwv
FIREWORKS_ENABLED=true
FIREWORKS_DEFAULT_MODEL=accounts/fireworks/models/llama-v3p3-70b-instruct

# Anthropic Claude API (fallback)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Google Gemini API
GEMINI_API_KEY=your-gemini-api-key-here

# OpenAI API (alternative)
# OPENAI_API_KEY=your_api_key_here

# ElevenLabs TTS (optional - for high-quality voice)
# ELEVENLABS_API_KEY=your_api_key_here

# ----------------------------------------------------------------
# Security Configuration
# ----------------------------------------------------------------
# Secret key for session management
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
# SECRET_KEY=your_secret_key_here

# Allowed origins for CORS (for web UI)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8010

# ----------------------------------------------------------------
# Database Configuration (Optional)
# ----------------------------------------------------------------
# SQLite is used by default for Windows
DATABASE_TYPE=sqlite
DATABASE_PATH=./data/jarvis.db

# For Cloud SQL (advanced - requires GCP setup)
# DATABASE_TYPE=postgresql
# CLOUD_SQL_CONNECTION_NAME=project:region:instance
# DB_USER=jarvis
# DB_PASS=your_password
# DB_NAME=jarvis

# ----------------------------------------------------------------
# Feature Flags
# ----------------------------------------------------------------
# Enable/disable specific features

# Trinity Integration (Ironcliw-Prime + Reactor-Core)
Ironcliw_TRINITY_ENABLED=false  # Set to true if you have other repos

# Neural Mesh (Multi-agent system)
Ironcliw_NEURAL_MESH_ENABLED=false

# AGI OS (Autonomous actions)
Ironcliw_AGI_OS_ENABLED=false

# Computer Use (UI automation)
Ironcliw_COMPUTER_USE_ENABLED=true

# ----------------------------------------------------------------
# Windows-Specific Settings
# ----------------------------------------------------------------
# Use Windows notification system
Ironcliw_NOTIFICATIONS_ENABLED=true
Ironcliw_NOTIFICATION_PROVIDER=win10toast

# Windows automation backend
Ironcliw_AUTOMATION_PROVIDER=pyautogui

# Window management
Ironcliw_WINDOW_MANAGER=win32gui

# Audio backend
Ironcliw_AUDIO_BACKEND=sounddevice

# ----------------------------------------------------------------
# Paths (Windows)
# ----------------------------------------------------------------
# Data directory
Ironcliw_DATA_DIR=./data

# Cache directory
Ironcliw_CACHE_DIR=./cache

# Models directory
Ironcliw_MODELS_DIR=./models

# Logs directory
Ironcliw_LOGS_DIR=./logs

# ================================================================
# END OF CONFIGURATION
# ================================================================
