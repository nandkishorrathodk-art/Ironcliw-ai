                      # Normalize embedding (L2 normalization)
                      embedding = embedding / np.linalg.norm(embedding)

                      duration = (time.time() - start) * 1000
                      logger.info(f"  ✅ Embedding extracted ({len(embedding)}D, {embedding.dtype}) - {duration:.0f}ms")

                      return {
                          'step': 2,
