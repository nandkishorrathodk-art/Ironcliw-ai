# Ironcliw Backend Configuration
# Copy this to .env and update with your values

# API Keys
ANTHROPIC_API_KEY=your_api_key_here
OPENWEATHER_API_KEY=your_weather_api_key_here

# Server Configuration
BACKEND_PORT=8000  # Change to 8010 if frontend expects that port

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8000,ws://localhost:8000

# Vision Configuration
VISION_MAX_IMAGE_DIM=1536
VISION_JPEG_QUALITY=85
VISION_COMPRESSION=true
VISION_CACHE_ENABLED=true
VISION_MEMORY_SAFETY=true

# Proactive Monitoring
VISION_PROACTIVE_INTELLIGENCE=true
PROACTIVE_ANALYSIS_INTERVAL=3.0
PROACTIVE_IMPORTANCE_THRESHOLD=0.6
PROACTIVE_NOTIFICATION_STYLE=balanced

# System Settings
Ironcliw_DEBUG=false
Ironcliw_VOICE_ENABLED=true

# Real-Time Voice Conversation (Audio Bus Infrastructure)
# Requires: pip install piper-tts speexdsp faster-whisper samplerate
Ironcliw_AUDIO_BUS_ENABLED=false