{
  "$schema": "https://json.schemastore.org/newmanrc",
  "description": "Newman configuration for Ironcliw Postman API tests",
  "globals": {
    "base_url": "http://localhost:8010",
    "speaker_name": "Derek",
    "user_id": "derek",
    "confidence_threshold": "0.85",
    "security_level": "base"
  },
  "run": {
    "collection": "collections/Ironcliw_Voice_Auth_Intelligence_Collection.postman_collection.json",
    "environment": "environments/Ironcliw_Environment.postman_environment.json",
    "reporters": ["cli", "htmlextra"],
    "reporter": {
      "htmlextra": {
        "export": "./reports/newman-report.html",
        "title": "Ironcliw Voice Auth API Tests",
        "browserTitle": "Ironcliw Tests",
        "darkTheme": true,
        "testPaging": true,
        "logs": true,
        "showEnvironmentData": true,
        "showGlobalData": true,
        "omitHeaders": true,
        "showMarkdownLinks": true,
        "noSyntaxHighlighting": false,
        "showFolderDescription": true,
        "timezone": "America/Los_Angeles"
      }
    },
    "iterationCount": 1,
    "delayRequest": 100,
    "timeout": 30000,
    "timeoutRequest": 10000,
    "timeoutScript": 10000,
    "ignoreRedirects": false,
    "insecure": false,
    "bail": false,
    "color": "auto",
    "suppressExitCode": false,
    "workingDir": "."
  },
  "collections": {
    "voice-auth-intelligence": {
      "name": "Ironcliw Voice Auth Intelligence",
      "file": "collections/Ironcliw_Voice_Auth_Intelligence_Collection.postman_collection.json",
      "folders": [
        "1. System Status",
        "2. Calibration System",
        "3. Fine-Tuning System",
        "4. Anti-Spoofing",
        "5. Authentication Simulation",
        "6. Audit Trail (Langfuse)",
        "7. Multi-Factor Fusion",
        "8. Full Pipeline Tests"
      ],
      "description": "Advanced ML-based voice authentication with calibration and anti-spoofing"
    },
    "voice-unlock-flow": {
      "name": "Ironcliw Voice Unlock Flow",
      "file": "collections/Ironcliw_Voice_Unlock_Flow_Collection.postman_collection.json",
      "description": "Sequential voice unlock authentication pipeline"
    },
    "api-collection": {
      "name": "Ironcliw AI Agent API",
      "file": "collections/Ironcliw_API_Collection.postman_collection.json",
      "folders": [
        "Health & Status",
        "Startup",
        "Screen Control"
      ],
      "description": "Complete Ironcliw system API"
    }
  },
  "environments": {
    "local": {
      "name": "Ironcliw Local Development",
      "file": "environments/Ironcliw_Environment.postman_environment.json",
      "variables": {
        "base_url": "http://localhost:8010",
        "websocket_url": "ws://localhost:8000"
      }
    },
    "docker": {
      "name": "Ironcliw Docker",
      "variables": {
        "base_url": "http://host.docker.internal:8010",
        "websocket_url": "ws://host.docker.internal:8000"
      }
    },
    "staging": {
      "name": "Ironcliw Staging",
      "variables": {
        "base_url": "https://staging.jarvis.example.com",
        "websocket_url": "wss://staging.jarvis.example.com"
      }
    }
  },
  "scripts": {
    "test:all": "newman run collections/Ironcliw_Voice_Auth_Intelligence_Collection.postman_collection.json && newman run collections/Ironcliw_Voice_Unlock_Flow_Collection.postman_collection.json && newman run collections/Ironcliw_API_Collection.postman_collection.json --folder 'Health & Status'",
    "test:voice-auth": "newman run collections/Ironcliw_Voice_Auth_Intelligence_Collection.postman_collection.json",
    "test:voice-unlock": "newman run collections/Ironcliw_Voice_Unlock_Flow_Collection.postman_collection.json",
    "test:api": "newman run collections/Ironcliw_API_Collection.postman_collection.json --folder 'Health & Status'",
    "test:anti-spoofing": "newman run collections/Ironcliw_Voice_Auth_Intelligence_Collection.postman_collection.json --folder '4. Anti-Spoofing'",
    "test:calibration": "newman run collections/Ironcliw_Voice_Auth_Intelligence_Collection.postman_collection.json --folder '2. Calibration System'"
  }
}
