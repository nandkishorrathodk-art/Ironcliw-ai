# =============================================================================
# Ironcliw AI Agent - Docker Environment Configuration
# =============================================================================
#
# Copy this file to .env and configure your settings:
#   cp docker/.env.example docker/.env
#
# Version: 9.4.0
# =============================================================================

# -----------------------------------------------------------------------------
# General Settings
# -----------------------------------------------------------------------------
Ironcliw_VERSION=9.4.0
Ironcliw_ENV=production

# -----------------------------------------------------------------------------
# API Keys (REQUIRED for full functionality)
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=sk-ant-your-key-here
OPENAI_API_KEY=sk-your-key-here
GOOGLE_API_KEY=

# -----------------------------------------------------------------------------
# Port Configuration
# -----------------------------------------------------------------------------
Ironcliw_API_PORT=8010
Ironcliw_LOADING_PORT=8011
Ironcliw_FRONTEND_PORT=3000
Ironcliw_PRIME_PORT=8012
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# Neural Mesh Configuration
# -----------------------------------------------------------------------------
NEURAL_MESH_ENABLED=true
NEURAL_MESH_PRODUCTION=true
NEURAL_MESH_MAX_AGENTS=60

# -----------------------------------------------------------------------------
# Data Flywheel & Training
# -----------------------------------------------------------------------------
DATA_FLYWHEEL_ENABLED=true
TRAINING_ENABLED=true
TRAINING_SCHEDULE=03:00
TRAINING_MIN_EXPERIENCES=100
TRAINING_COOLDOWN_HOURS=24

# -----------------------------------------------------------------------------
# Continuous Scraping
# -----------------------------------------------------------------------------
CONTINUOUS_SCRAPING_ENABLED=true
SCRAPING_INTERVAL_HOURS=4
SCRAPING_MAX_PAGES=50

# -----------------------------------------------------------------------------
# Model Export
# -----------------------------------------------------------------------------
GGUF_EXPORT_ENABLED=true
GGUF_QUANTIZATION=q4_k_m

# -----------------------------------------------------------------------------
# Google Cloud (Optional)
# -----------------------------------------------------------------------------
GCS_BUCKET=
GCS_UPLOAD_ENABLED=false
GCP_CREDENTIALS_PATH=./credentials

# -----------------------------------------------------------------------------
# Ironcliw Prime Cloud Run (Optional)
# -----------------------------------------------------------------------------
Ironcliw_PRIME_CLOUD_RUN_URL=

# -----------------------------------------------------------------------------
# Resource Limits
# -----------------------------------------------------------------------------
BACKEND_CPU_LIMIT=4
BACKEND_MEMORY_LIMIT=8G
TRAINING_CPU_LIMIT=2
TRAINING_MEMORY_LIMIT=4G
PRIME_CPU_LIMIT=4
PRIME_MEMORY_LIMIT=16G

# -----------------------------------------------------------------------------
# Ironcliw Prime Local Settings
# -----------------------------------------------------------------------------
PRIME_CONTEXT_SIZE=4096
PRIME_THREADS=4
PRIME_GPU_LAYERS=0
