# Ironcliw AI Agent Backend - Slim Cloud Run Container
# ==================================================
#
# Lightweight version without heavy ML dependencies.
# Uses Cloud Run's scale-to-zero and connects to:
# - Anthropic Claude API for intelligence
# - Ironcliw-Prime Cloud Run for local LLM inference
# - Cloud SQL/Redis for caching
#
# Usage:
#   docker build -f docker/Dockerfile.backend-slim -t jarvis-backend:slim .
#
# Version: 9.4.0

FROM python:3.11-slim-bookworm

LABEL maintainer="Ironcliw AI Agent Team"
LABEL description="Ironcliw AI Agent Backend Server (Slim)"
LABEL version="9.4.0-slim"

# System dependencies (minimal)
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    sqlite3 \
    && rm -rf /var/lib/apt/lists/*

# Create non-root user
RUN groupadd -r jarvis && useradd -r -g jarvis -d /app -s /sbin/nologin jarvis

WORKDIR /app

# Install core Python dependencies only
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir \
    # Web framework
    fastapi>=0.110.0 \
    uvicorn[standard]>=0.27.0 \
    starlette>=0.36.0 \
    pydantic>=2.5.0 \
    python-multipart>=0.0.9 \
    # Async
    aiohttp>=3.9.0 \
    aiosqlite>=0.19.0 \
    httpx>=0.26.0 \
    # AI/LLM
    anthropic>=0.18.0 \
    openai>=1.12.0 \
    langchain>=0.1.0 \
    langgraph>=0.0.25 \
    langfuse>=2.0.0 \
    # Data/Cache
    redis>=5.0.0 \
    chromadb>=0.4.0 \
    # Utils
    python-dotenv>=1.0.0 \
    pyyaml>=6.0 \
    psutil>=5.9.0 \
    coloredlogs>=15.0.0

# Copy application code
COPY backend/ /app/backend/
COPY run_supervisor.py /app/
COPY start_system.py /app/
COPY loading_server.py /app/
COPY docker/entrypoint.sh /app/entrypoint.sh
RUN chmod +x /app/entrypoint.sh

# Create directories
RUN mkdir -p /app/data/training_db /app/data/logs /app/models /app/cache && \
    chown -R jarvis:jarvis /app

# Environment
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONPATH=/app:/app/backend
ENV Ironcliw_DOCKER=true
ENV Ironcliw_DATA_DIR=/app/data
ENV Ironcliw_MODELS_DIR=/app/models

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD curl -f http://localhost:8010/health || exit 1

USER jarvis

EXPOSE 8010

VOLUME ["/app/data", "/app/models"]

ENTRYPOINT ["/app/entrypoint.sh"]
CMD ["python", "-m", "uvicorn", "backend.main:app", "--host", "0.0.0.0", "--port", "8010"]
