# JARVIS Windows Configuration Template
# Copy this file to .env and customize for your Windows system
# Version: 1.0.0

# ============================================================================
# PLATFORM CONFIGURATION
# ============================================================================

# Platform (auto-detected, but can be overridden)
JARVIS_PLATFORM=windows

# ============================================================================
# AUTHENTICATION SETTINGS (Windows: Authentication Bypassed)
# ============================================================================

# Bypass authentication on Windows (voice unlock requires macOS)
JARVIS_AUTH_BYPASS=true

# Keyring backend for credential storage
# Windows uses Windows Credential Manager automatically
JARVIS_KEYRING_BACKEND=keyring

# ============================================================================
# TEXT-TO-SPEECH (TTS) CONFIGURATION
# ============================================================================

# TTS engine for Windows (uses Microsoft SAPI)
JARVIS_TTS_ENGINE=pyttsx3

# TTS voice (leave empty for system default, or specify voice name)
# List available voices with: python -c "import pyttsx3; [print(v.name) for v in pyttsx3.init().getProperty('voices')]"
# JARVIS_TTS_VOICE=Microsoft David Desktop

# TTS voice rate (words per minute)
JARVIS_TTS_RATE=175

# TTS volume (0.0 to 1.0)
JARVIS_TTS_VOLUME=0.9

# ============================================================================
# SCREEN CAPTURE CONFIGURATION
# ============================================================================

# Screen capture method (mss is fastest on Windows)
JARVIS_CAPTURE_METHOD=mss

# Capture format (png recommended for quality, jpeg for speed)
JARVIS_CAPTURE_FORMAT=png

# Capture quality (1-100, only applies to jpeg)
JARVIS_CAPTURE_QUALITY=95

# Target FPS for screen capture
JARVIS_SCREEN_CAPTURE_FPS=30

# Monitor to capture (0 = primary, -1 = all monitors)
JARVIS_SCREEN_MONITOR=0

# ============================================================================
# GPU & ML CONFIGURATION
# ============================================================================

# GPU backend (auto-detect, cuda for NVIDIA, directx for general Windows)
JARVIS_GPU_BACKEND=auto

# ML inference backend (cpu, cuda for NVIDIA GPU)
JARVIS_ML_BACKEND=cpu

# Number of GPU layers for local LLM (if applicable)
# Set to 0 for CPU-only, -1 for all layers on GPU
JARVIS_N_GPU_LAYERS=0

# Enable FP16 precision for faster inference (requires NVIDIA GPU)
JARVIS_ENABLE_FP16=false

# ============================================================================
# DATA DIRECTORIES (Windows Paths)
# ============================================================================

# Configuration directory
JARVIS_CONFIG_DIR=%APPDATA%\JARVIS\config

# Logs directory
JARVIS_LOG_DIR=%LOCALAPPDATA%\JARVIS\logs

# Data directory (models, databases, etc.)
JARVIS_DATA_DIR=%LOCALAPPDATA%\JARVIS\data

# Cache directory (temporary files, thumbnails, etc.)
JARVIS_CACHE_DIR=%LOCALAPPDATA%\JARVIS\cache

# Temp directory
JARVIS_TEMP_DIR=%TEMP%\JARVIS

# ============================================================================
# WINDOW MANAGEMENT
# ============================================================================

# Window manager backend (pygetwindow for Windows)
JARVIS_WINDOW_MANAGER=pygetwindow

# Enable window automation
JARVIS_ENABLE_WINDOW_AUTOMATION=true

# ============================================================================
# CLIPBOARD & AUTOMATION
# ============================================================================

# Clipboard library (pyperclip is cross-platform)
JARVIS_CLIPBOARD_BACKEND=pyperclip

# Keyboard/mouse automation library
JARVIS_AUTOMATION_BACKEND=pyautogui

# Automation delay (seconds between actions)
JARVIS_AUTOMATION_DELAY=0.1

# ============================================================================
# SYSTEM TRAY
# ============================================================================

# Enable system tray icon
JARVIS_ENABLE_TRAY_ICON=true

# System tray library (pystray for Windows)
JARVIS_TRAY_BACKEND=pystray

# ============================================================================
# DOCKER CONFIGURATION
# ============================================================================

# Docker socket path (Windows uses named pipe)
DOCKER_HOST=npipe:////./pipe/docker_engine

# Enable Docker integration
JARVIS_DOCKER_ENABLED=false

# ============================================================================
# BACKEND SERVER
# ============================================================================

# Backend host
JARVIS_BACKEND_HOST=127.0.0.1

# Backend port
JARVIS_BACKEND_PORT=8010

# WebSocket port (usually same as backend)
JARVIS_WS_PORT=8010

# Enable CORS (for frontend)
JARVIS_ENABLE_CORS=true

# ============================================================================
# FRONTEND SERVER
# ============================================================================

# Frontend host
JARVIS_FRONTEND_HOST=127.0.0.1

# Frontend port
JARVIS_FRONTEND_PORT=3000

# Auto-open browser on startup
JARVIS_AUTO_OPEN_BROWSER=true

# ============================================================================
# LOGGING
# ============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
JARVIS_LOG_LEVEL=INFO

# Enable verbose logging
JARVIS_VERBOSE=false

# Log file rotation (max size in MB)
JARVIS_LOG_MAX_SIZE=100

# Log file retention (days)
JARVIS_LOG_RETENTION_DAYS=30

# ============================================================================
# CLOUD SERVICES (Optional)
# ============================================================================

# GCP Project ID (for cloud features, optional on Windows)
# GCP_PROJECT_ID=

# GCP Region
# GCP_REGION=us-central1

# Claude API Key (for LLM features)
# CLAUDE_API_KEY=

# Enable cloud inference fallback
CLAUDE_FALLBACK_ENABLED=true

# ============================================================================
# ADVANCED SETTINGS
# ============================================================================

# Development mode (enables hot reload)
JARVIS_DEV_MODE=false

# Enable debug mode
JARVIS_DEBUG=false

# Enable performance monitoring
JARVIS_ENABLE_MONITORING=true

# Memory limit (MB, 0 = no limit)
JARVIS_MEMORY_LIMIT=0

# CPU limit (percentage, 0 = no limit)
JARVIS_CPU_LIMIT=0

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable voice commands
JARVIS_ENABLE_VOICE=true

# Enable vision/screen analysis
JARVIS_ENABLE_VISION=true

# Enable system control (window management, automation)
JARVIS_ENABLE_SYSTEM_CONTROL=true

# Enable web browsing
JARVIS_ENABLE_WEB_BROWSING=true

# Enable code execution
JARVIS_ENABLE_CODE_EXECUTION=false

# ============================================================================
# END OF CONFIGURATION
# ============================================================================
