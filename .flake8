[flake8]
# Linter configuration for Ironcliw AI Agent

# Exclude files that should not be linted
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    node_modules,
    # Exclude yabai_space_detector.py to prevent auto-formatting
    backend/vision/yabai_space_detector.py

# Max line length
max-line-length = 120

# Ignore specific error codes if needed
ignore =
    E203,  # whitespace before ':'
    W503,  # line break before binary operator
